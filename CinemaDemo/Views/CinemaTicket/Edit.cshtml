@using CinemaDemo.ViewModels
@model ViewCinemaTicketEdit
@{
    ViewData["Title"] = ViewBag.Title;
}

<h3>@ViewData["Title"]</h3>
<div class="container">
    <form asp-action="Edit">
        <input type="hidden" asp-for="Id" value="@ViewBag.cinemaTicketId" />
        <input type="hidden" asp-for="CinemaId" value="@ViewBag.cinemaId" />
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="名称" asp-for="@Model.Name" required>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="Star" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="text" class="form-control" placeholder="主演" asp-for="@Model.Star" required>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="ReleaseTime" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input type="date" class="form-control" placeholder="上映时间" asp-for="@Model.ReleaseTime" required>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">提交</button>
            </div>
        </div>
    </form>
</div>
